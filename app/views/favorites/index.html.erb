<div>
  <div>
    <h1>
      List of all favorites
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new favorite
    </h2>

    <form action="/insert_favorite" method="post">
      <div>
      
        <label for="book_id_box">
          Book
        </label>

        <select name="query_book_id">
          <% Book.all.order(:title).each do |a_book| %>
            <option value="<%= a_book.id %>">
            <%= a_book.title %>
            </option>
          <% end %>
        </select>
      </div>

      <button>
        Create favorite
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>

        <th>
          Book
        </th>

        <th>
          Cover
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_favorites.each do |a_favorite| %>
      <tr>

        <td>
          <%= Book.where(:id => a_favorite.book_id).first.title %>
        </td>

        <td>
        <img src=<%= Book.where(:id => a_favorite.book_id).first.image %> width="15%" height="15%">
        </td>

        <td>
          <a href="/favorites/<%= a_favorite.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
