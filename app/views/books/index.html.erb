<div>
  <div>
    <h1>
      List of all books
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new book
    </h2>

    <form action="/insert_book" method="post">
      <div>
        <label for="title_box">
          Title
        </label>

        <input type="text" id="title_box" name="query_title">
      </div>

      <div>
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description">
      </div>

      <div>
        <label for="genre_id_box">
          Genre
        </label>

        <input type="text" id="genre_id_box" name="query_genre_id">
      </div>

      <div>
        <label for="image_box">
          Image
        </label>

        <input type="text" id="image_box" name="query_image">
      </div>

      <div>
        <label for="author_id_box">
          Author
        </label>

        <input type="text" id="author_id_box" name="query_author_id">
      </div>

      <button>
        Create book
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border-color="black" border="1" cellpadding="20" cellspacing="1" width="100%">
      <tr align="center" valign="middle" width="50%">
        <th align="center" valign="middle" width="50%">
          Cover
        </th>

        <th font-size="16">
          Title
        </th>

        <th>
          Author
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_books.each do |a_book| %>
      <tr>
        <td align="center" valign="middle">
          <img src=<%= a_book.image %> width="15%" height="15%">
        </td>

        <td align="center" valign="middle">
          <%= a_book.title %>
        </td>

        <td align="center" valign="middle" width="50%">
          <%= Author.where(:id => a_book.author_id).first.name %>
        </td>

        <td align="center" valign="middle" width="50%">
          <a href="/books/<%= a_book.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
